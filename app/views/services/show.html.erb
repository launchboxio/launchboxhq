<div class="row">
  <div class="col-md-8">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= repository_path(@repository) %>"><%= @repository.repository %></a></li>
        <li class="breadcrumb-item"><a href="<%= repository_services_path(@repository) %>">Services</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @service.name || @service.full_name %></li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">Details</div>
          <div class="card-body">
            <table class="table">
              <tr>
                <td>Name</td>
                <td><%= @service.name %></td>
              </tr>
              <tr>
                <td>Full Name</td>
                <td><%= @service.full_name %></td>
              </tr>
              <tr>
                <td>Default Branch</td>
                <td><%= @service.default_branch %></td>
              </tr>
              <tr>
                <td>Visibility</td>
                <td><%= @service.visibility %></td>
              </tr>
              <tr>
                <td>Language</td>
                <td><%= @service.language %></td>
              </tr>
              <tr>
                <td>Deployment Strategy</td>
                <td><%= @service.deployment_strategy %></td>
              </tr>
              <tr>
                <td>Update Strategy</td>
                <td><%= @service.update_strategy %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">Recent commits</div>
        <div class="card-body">

        </div>
      </div>
    </div>
  </div>
</div>
