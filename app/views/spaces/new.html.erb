<div class="card">
  <%= form_for(@space) do |f| %>
    <div class="card-header">New Space</div>
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :cluster, "Cluster", class: "form-label" %>
        <%= f.select :cluster, @clusters.map { |c| [c.name, c.id]}, {}, class: "form-select" %>
      </div>
      <!-- TODO: Add input group with Units for Memory, CPU, and Disk Size-->
      <div class="mb-3">
        <%= f.label :memory, "Memory", class: "form-label" %>
        <%= f.text_field :memory, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :cpu, "CPU", class: "form-label" %>
        <%= f.text_field :cpu, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :disk, "Disk", class: "form-label" %>
        <%= f.text_field :disk, class: "form-control" %>
      </div>
    </div>
    <p>Addons</p>
    <% @addons.each do |addon| %>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="<%= addon.release %>" name="addon[<%= addon.id %>">
        <label class="form-check-label" for="<%= addon.release %>"><%= addon.repo %>/<%= addon.chart %>:<%= addon.version %></label>
      </div>
    <% end %>
    <div class="card-footer">
      <button class="btn" type="submit">Create</button>
    </div>
  <% end %>
</div>