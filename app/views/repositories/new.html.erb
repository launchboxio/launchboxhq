<div class="row">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= repositories_path %>">Repositories</a></li>
      <li class="breadcrumb-item active" aria-current="page">New Repository</li>
    </ol>
  </nav>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-4">
    <div class="card">
      <%= bootstrap_form_for(@repository) do |f| %>
        <div class="card-header">Details</div>
        <div class="card-body">
          <%= f.collection_select(:vcs_connection_id, current_user.vcs_connections, :id, :provider) %>
          <%= f.text_field :repository %>
        </div>
        <div class="card-footer">
          <%= f.submit "Submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
