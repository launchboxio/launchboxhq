<div class="row">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">Organizations</li>
    </ol>
  </nav>
</div>


<div>
  <table class="table">
    <thead>
    <tr>
      <td>Name</td>
      <td>Company</td>
      <td>Email</td>
      <td>Verified</td>
      <td>Type</td>
      <td>Plan</td>
    </tr>
    </thead>
    <tbody>
    <% @organizations.each do |org| %>
      <tr onclick="location.href = '<%= organization_path(org.id) %>';">
        <td><%= org.name %></td>
        <td><%= org.company %></td>
        <td><%= org.email %></td>
        <td><%= org.is_verified %></td>
        <td><%= org.organization_type %></td>
        <td><%= org.plan %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div >
  <a class="float-right" href="<%= new_organization_path %>">Create new organization</a>
</div>
