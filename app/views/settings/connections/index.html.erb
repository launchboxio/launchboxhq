<div class="row">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active"><a href="<%= settings_path %>">Settings</a></li>
      <li class="breadcrumb-item active" aria-current="page">VCS Connections</li>
    </ol>
  </nav>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">VCS Connections</div>
      <div class="card-body">
        <ul class="list-group">
          <% @connections.each do |conn| %>
            <li class="list-group-item">
              <%= conn.provider %> - <%= conn.email %> - <%= conn.uid %>
            </li>
          <% end %>
        </ul>
        <div class="row">
          <%= button_to "Link Github Account", omniauth_authorize_path('user', 'github'), data: { turbo: false }, class: "btn btn-small" %>
        </div>
        <div class="row">
          <%= button_to "Link Gitlab Account", omniauth_authorize_path('user', 'gitlab'), data: { turbo: false }, class: "btn btn-small" %>
        </div>
        <div class="row">
          <%= button_to "Link Bitbucket Account", omniauth_authorize_path('user', 'bitbucket'), data: { turbo: false }, class: "btn btn-small" %>
        </div>
      </div>
    </div>
  </div>
</div>
