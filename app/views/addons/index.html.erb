<div class="card">
  <div class="card-header">Addons</div>
  <div class="card-body">
    <table class="table">
      <thead>
      <tr>
        <th>Chart</th>
        <th>Version</th>
        <th>Release</th>
        <th>Namespace</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @addons.each do |addon| %>
        <tr>
          <td>
            <%= link_to "#{addon.repo}/#{addon.chart}", edit_addon_path(addon) %>
          <td><%= addon.version %></td>
          <td><%= addon.release %></td>
          <td><%= addon.namespace %></td>
          <td>
            <%= link_to "View Values", addon %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <a href="/addons/new" class="btn">Create a new addon</a>
  </div>
</div>