apiVersion: v1
clusters:
  - cluster:
      certificate-authority-data: <%= @project.ca_crt %>
      server: <%= @project.host %>
    name: https://<%= @project.slug %>
contexts:
  - context:
      cluster: <%= @project.slug %>
      user:  <%= @project.slug %>
    name:  <%= @project.slug %>
current-context:  <%= @project.slug %>
kind: Config
preferences: {}
users:
  - name: <%= @project.slug %>
    user:
      exec:
        apiVersion: client.authentication.k8s.io/v1beta1
        args:
          - oidc-login
          - get-token
          - --oidc-issuer-url=<%= @oidc_issuer %>
          - --oidc-client-id=<%= @application.uid %>
          - --oidc-extra-scope=email
        command: kubectl
