<div class="row">
  <div class="col-md-8">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= projects_path %>">Projects</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @project.name %></li>
      </ol>
    </nav>
  </div>
  <div class="col-md-4">
    <div class="dropdown">
      <a class="btn btn-small btn-sm btn-outline-secondary dropdown-toggle float-end" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Actions
      </a>

      <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <li><a class="dropdown-item" href="<%= kubeconfig_project_url(@project) %>" target="_blank">Download Kubeconfig</a></li>
        <li><a class="dropdown-item" href="#">Force Sync</a></li>
        <li><a class="dropdown-item" href="#">Pause</a></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">Details</div>
          <div class="card-body">
            <table class="table">
              <tr>
                <td>Slug</td>
                <td><%= @project.slug %></td>
              </tr>
              <tr>
                <td>Status</td>
                <td><span class="badge bg-success">Provisioned</span></td>
              </tr>
              <tr>
                <td>ID</td>
                <td><%= @project.id %></td>
              </tr>
              <tr>
                <td>Memory</td>
                <td><%= @project.memory %> Mi</td>
              </tr>
              <tr>
                <td>CPU</td>
                <td><%= @project.cpu %></td>
              </tr>
              <tr>
                <td>Disk</td>
                <td><%= @project.disk %> GB</td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <div class="col-md-12 pt-2">
        <div class="card">
          <div class="card-header">Users</div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <td>Email</td>
                  <td>Role</td>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= current_user.email %></td>
                  <td>Admin</td>
                </tr>

              </tbody>
            </table>
          </div>
          <div class="card-footer">
            Add User
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">Addons</div>
        <div class="card-body">
          <% if @project.addon_subscriptions.length == 0 %>
            <div class="alert alert-info">
              No addons have been added to this project
            </div>
          <% else %>
            <ul class="list-group">
              <% @project.addon_subscriptions.each do |subscription| %>
                <li class="list-group-item">
                  <div class="row">
                    <div class="col-md-8">
                      <%= subscription.addon.name %> (<%= subscription.name %>)
                    </div>
                    <div class="col-md-4">
                      <%= button_to "delete", project_addon_path(@project, subscription), :method => :delete, :class => 'btn btn-small float-end'  %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <div class="card-footer">
          <a href="<%= new_project_addon_path(@project) %>">
            Attach Addon
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-12 pt-2">
      <div class="card">
        <div class="card-header">Services</div>
        <div class="card-body">

        </div>
        <div class="card-footer"></div>
      </div>
    </div>
  </div>
</div>
