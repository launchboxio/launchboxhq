<div class="row">
  <div class="col-md-8">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= projects_path %>">Projects</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @project.name %></li>
      </ol>
    </nav>
  </div>
  <div class="col-md-4">
    <div class="dropdown">
      <a class="btn btn-small btn-secondary dropdown-toggle float-end" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown link
      </a>

      <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <li>
          <a class=dropdown-item" href="<%= kubeconfig_project_url(@project) %>" target="_blank">Download Kubeconfig</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Addons</h3>
    <% if @project.addon_subscriptions.length == 0 %>
      <div class="alert alert-info">
        No addons have been added to this project
      </div>
    <% else %>
      <ul class="list-group">
        <% @project.addon_subscriptions.each do |subscription| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-8">
                <%= subscription.addon.name %> (<%= subscription.name %>)
              </div>
              <div class="col-md-4">
                <%= button_to "delete", project_addon_path(@project, subscription), :method => :delete, :class => 'btn btn-small float-end'  %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
    <a href="<%= new_project_addon_path(@project) %>">
      Attach Addon
    </a>
  </div>
